<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
      <!-- 配置驱动：hibernate:配置文件中的前缀hibernate可以省略		-->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>	
		<!-- 配置url  itcast为数据库的名字 -->	
		<property name="hibernate.connection.url">jdbc:mysql:///campus</property>
		<!-- 用户名 -->
		<property name="hibernate.connection.username">root</property>
	    <!-- 密码 -->
	    <property name="hibernate.connection.password">root</property>
	    
	    <!-- 数据库方言 -->
	    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
	    
	    <!-- 显示优化:默认情况下， hibernate运行的时候，是不会再控制台打印输出语句的 
	    	 这个配置不是必须的，但是通常我们配置
	    -->
	    <property name="hibernate.show_sql">true</property>
	    <property name="hibernate.format_sql">true</property>
		
		
		<!-- hibernate建表方式
			create-drop:运行的时候自动建表，运行结束之后，自动 删除表
			create:每次运行的时候都会重新建表（如果运行前数据库中存在这张表，这张表中有数据，就会先删除，再建）
			update:每次运行的时候，检查：数据库中存在这边表吗？
				  如果不存在，则创建；
			            如果存在，验证实体文件中（hbm）的属性与数据库中的字段是否一致，如果发现表中少了字段，就新增字段
			     推荐使用update       
			validate:
			当运行的时候，会去检查实体文件中的属性与表中的字段是否一致，如果一致，则继续运行
			如果不一致呢？则报错
		 -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- 设置自动提交，只有mysql支持 -->
		<!-- <property name="hibernate.connection.autocommit">true</property> -->
		<!-- 加载一个资源文件".hbm文件
	    	 resource的值：是hbm文件对应的完整的包路径地址
	    	 但是，这个是，包的分割用/
	    	 最终文件名用.	
	     -->
		<!--配置一对多的映射关系  -->
		<mapping resource="domain/User.hbm.xml"/>
		<mapping resource="domain/Task.hbm.xml"/>
    </session-factory>

</hibernate-configuration>